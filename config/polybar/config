[colors]
background = ${xrdb:color0}
foreground = #FFFFFF

[global/wm]
margin-top = 0
margin-bottom = 0
override-redirect = true
position = top

[bar/luna]
background = ${colors.background}
foreground = ${colors.foreground}

font-0 = SF Mono:size=11:antialias=true;2

modules-left   = date
modules-center = time separator time
modules-right  = vol separator bat separator net

spacing             = 1
padding-left        = 1
padding-right       = 1
module-margin-left  = 0
module-margin-right = 0

; ---------------- modules -------------------

[module/date]
type              = custom/script
interval          = 1.0
exec              = date "+%a, %d %b"
format-background = ${colors.background}
format-foreground = ${colors.foreground}

[module/time]
type              = custom/script
interval          = 1.0
exec              = date +%I:%M
format-padding    = 0
format-background = ${colors.background}
format-foreground = ${colors.foreground}

[module/vol]
type        = custom/script
interval    = 0.01
exec        = ~/bin/vol -q
scroll-up   = ~/bin/vol -i
scroll-down = ~/bin/vol -d

[module/bat]
type     = custom/script
interval = 1.0
exec     = ~/bin/bat

[module/net]
type       = custom/script
interval   = 5.0
exec       = ~/bin/net
click-left = kitty nmtui 

[module/separator]
type = custom/script
format-text = <label>
label = " / "
exec = echo label
format-foreground = #666666
