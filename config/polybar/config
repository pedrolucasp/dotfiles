[colors]
background = ${xrdb:color0}
foreground = #FFFFFF

[global/wm]
margin-top = 0
margin-bottom = 0
override-redirect = true
position = top

[bar/luna]
monitor = ${env:MONITOR:}
background = ${colors.background}
foreground = ${colors.foreground}

font-0 = SF Mono:size=11:antialias=true;2

modules-left   = date separator i3
modules-center = time 
modules-right  = vol separator bat separator net separator powermenu

spacing             = 1
padding-left        = 1
padding-right       = 1
module-margin-left  = 0
module-margin-right = 0

; ---------------- modules -------------------

[module/date]
type              = custom/script
interval          = 1.0
exec              = date "+%a, %d %b"
format-background = ${colors.background}
format-foreground = ${colors.foreground}
click-left = kitty calcurse

[module/time]
type              = custom/script
interval          = 1.0
exec              = date +%I:%M
format-padding    = 0
format-background = ${colors.background}
format-foreground = ${colors.foreground}

[module/vol]
type        = custom/script
interval    = 0.01
exec        = ~/bin/vol -q
scroll-up   = ~/bin/vol -i
scroll-down = ~/bin/vol -d

[module/bat]
type     = custom/script
interval = 1.0
exec     = ~/bin/bat

[module/net]
type       = custom/script
interval   = 5.0
exec       = ~/bin/net
click-left = kitty nmtui 

[module/separator]
type = custom/script
format-text = <label>
label = " / "
exec = echo label
format-foreground = #666666


[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
padding-left = 5

; Only show workspaces on the same output as the bar
;pin-workspaces = true

label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = #FFF

; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-background = #CCC
label-focused-underline= #FFF
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-padding = 2

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-background = #f1f000
label-urgent-padding = 2

; Separator in between workspaces
; label-separator = |

[module/powermenu]
type = custom/menu

expand-right = true

format-spacing = 1

label-open = power 
label-open-foreground = #CCC
label-close = cancel
label-close-foreground = #f10
label-separator = |
label-separator-foreground = #eee

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = sudo reboot

menu-2-0 = power off
menu-2-0-exec = sudo poweroff
menu-2-1 = cancel
menu-2-1-exec = menu-open-0


